<p style="color: green"><%= notice %></p>

<%= render @map %>

<div id="map" style="height: 800px; width: 1400px;"></div>

<div>
<%= link_to "Edit this map", edit_map_path(@map) %> |
<%= link_to "Back to maps", maps_path %>

<%= button_to "Destroy this map", @map, method: :delete %>
</div>

<script type="application/json" id="provinces-json">
  <%= raw @provinces_json %>
</script>

<%= javascript_include_tag 'https://code.jquery.com/jquery-3.6.0.min.js' %>
<%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.js' %>
<%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.css' %>
<%= javascript_include_tag 'map_styles' %>
<%= javascript_include_tag 'map_labels' %>
<%= javascript_include_tag 'map' %>
