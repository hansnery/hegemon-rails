  </div>

  <div>
    <%= form.label :private, style: "display: block" %>
    <%= form.check_box :private %>
  </div>

  <%= form.fields_for :map, @game.build_map do |map_fields| %>
    <%= render partial: "maps/form", locals: { map: @map } %>
  <% end %>
<% end %>
